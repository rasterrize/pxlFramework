{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MSBuild ALL - Debug",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "build/ALL_BUILD.vcxproj",
                "/property:Configuration=Debug",
                "/t:build",
                "/maxCpuCount",
                "/terminalLogger",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
                "clear": true,
            },
            "problemMatcher": "$msCompile",
        },
        {
            "label": "MSBuild ALL - Release",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "build/ALL_BUILD.vcxproj",
                "/property:Configuration=Release",
                "/maxCpuCount",
                "/terminalLogger",
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "clear": true,
            },
            "problemMatcher": "$msCompile",
            "dependsOn": [
                "CMake: configure"
            ]
        }
    ]
}