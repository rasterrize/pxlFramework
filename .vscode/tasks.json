{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build pxlFramework (Debug)",
            "type": "shell",
            "command": "MSBuild",
            "args": [
                "build/pxlFramework.sln",
                "/t:build",
                "/p:Configuration=Debug",
                "/v:minimal",
                "/maxCpuCount",
            ],
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "presentation": {
                "clear": true,
            },
            "problemMatcher": "$msCompile",
        },
        {
            "label": "Rebuild pxlFramework (Debug)",
            "type": "shell",
            "command": "MSBuild",
            "args": [
                "build/pxlFramework.sln",
                "/t:rebuild",
                "/p:Configuration=Debug",
                "/v:minimal",
                "/maxCpuCount",
            ],
            "group": {
                "kind": "build",
            },
            "presentation": {
                "clear": true,
                "showReuseMessage": false,
            },
            "problemMatcher": "$msCompile",
            "dependsOn": [
                "CMake: clean",
                "CMake: configure",
            ]
        },
        {
            "label": "Build pxlFramework (Release)",
            "type": "shell",
            "command": "MSBuild",
            "args": [
                "build/pxlFramework.sln",
                "/t:build",
                "/p:Configuration=Release",
                "/v:minimal",
                "/maxCpuCount",
            ],
            "group": "build",
            "presentation": {
                "clear": true,
                "showReuseMessage": false,
            },
            "problemMatcher": "$msCompile",
        },
        {
            "label": "Rebuild pxlFramework (Release)",
            "type": "shell",
            "command": "MSBuild",
            "args": [
                "build/pxlFramework.sln",
                "/t:rebuild",
                "/p:Configuration=Release",
                "/v:minimal",
                "/maxCpuCount",
            ],
            "group": "build",
            "presentation": {
                "clear": true,
                "showReuseMessage": false,
            },
            "problemMatcher": "$msCompile",
            "dependsOn": [
                "CMake: clean",
                "CMake: configure"
            ]
        }
    ]
}