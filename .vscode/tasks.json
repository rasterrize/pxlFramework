{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MSBuild - Debug",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "build/ALL_BUILD.vcxproj",
                "/property:Configuration=Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile",
            // "dependsOn": [
            //     "CMake: configure"
            // ]
        },
        {
            "label": "MSBuild - Release",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "build/ALL_BUILD.vcxproj",
                "/property:Configuration=Release"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile",
            "dependsOn": [
                "CMake: configure"
            ]
        }
    ]
}